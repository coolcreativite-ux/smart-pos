{
  "version": "1.0",
  "domain": "cooldigital.africa",
  "services": {
    "backend": {
      "name": "smart-pos-backend",
      "type": "dockerfile",
      "dockerfile": "backend/Dockerfile",
      "buildPath": "backend",
      "port": 3001,
      "domain": "api.smartpos.cooldigital.africa",
      "https": true,
      "healthcheck": {
        "path": "/health",
        "interval": 30
      },
      "env": {
        "NODE_ENV": "production",
        "PORT": "3001"
      }
    },
    "frontend": {
      "name": "smart-pos-frontend",
      "type": "dockerfile",
      "dockerfile": "frontend/Dockerfile",
      "buildPath": "frontend",
      "port": 80,
      "domain": "smartpos.cooldigital.africa",
      "https": true,
      "dependsOn": ["backend"]
    }
  }
}
